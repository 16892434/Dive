{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.funmula.dive",
  "productName": "Dive",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist-electron",
    "dist",
    "drizzle/**/*",
    {
      "from": "node_modules/sharp/build/Release/",
      "to": "node_modules/sharp/build/Release/",
      "filter": ["*.node"]
    }
  ],
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "target": [
      "dmg",
      "zip"
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "extraResources": [
    {
      "from": "node/win-x64/",
      "to": "node/",
      "filter": [
        "node.exe",
        "npx.cmd",
        "npm.cmd",
        "node_modules/**/*"
      ]
    },
    {
      "from": "drizzle",
      "to": "drizzle",
      "filter": ["**/*"]
    }
  ]
}
