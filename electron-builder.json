{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.funmula.dive",
  "productName": "Dive",
  "asar": true,
  "asarUnpack": [
    "**/node_modules/sharp/**/*",
    "**/node_modules/@img/**/*"
  ],
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist-electron",
    "dist",
    "drizzle/**/*"
  ],
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "target": [
      "dmg",
      "zip"
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],

  "extraResources": [
      {
        "from": "node/win-x64/",
        "to": "node/",
        "filter": [
          "node.exe",
          "npx.cmd",
          "npm.cmd",
          "node_modules/**/*"
        ]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "extraResources": [
    {
      "from": "drizzle",
      "to": "drizzle",
      "filter": ["**/*"]
    },
    {
      "from": "public/locales",
      "to": "locales",
      "filter": ["**/*"]
    }
  ]
}
